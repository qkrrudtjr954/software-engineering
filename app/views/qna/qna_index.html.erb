<p>
  <h1>궁금한 것을 질문하세요!</h1>
</p>

<div class="jumbotron">
  <div>
    <%= form_tag qna_create_path, method: "post" do %>
      <div class="form-group">
        <textarea name="content" class="form-control"  row="1" placeholder="Share what you want to know."></textarea>
        <input type="hidden" name="user_name" value="<%=current_user.name%>">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    <% end %>
  </div>
</div>

<div class="row marketing">
  <table class="qna_index_table"  width="98%">
    <% @post.each do |p| %>
    <tr height="30">
      <td><kbd><%= p.id %></kbd></td>
      <td width="50%" style="word-break:break-all"><a href="/qna/detail/<%=p.id%>">&nbsp;<%=p.content %>&nbsp;</a></td>
      <td class="text-right"><small style="color:#737373"><%= time_ago_in_words(p.created_at) %> ago</small></td>
      <td width="15%">
        <a href="/qna/destroy/<%=p.id%>">삭제</a>
      </td>
    </tr>
    <% end %>
  </table>
</div>
