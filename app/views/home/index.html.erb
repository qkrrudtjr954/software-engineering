<!-- Header -->
<header>
  <div class="container2">
    <div class="intro-container">
      <div class="row">
          <div >
              <!-- <img class="img-responsive" src="img/profile.png" alt="">
              <div class="intro-text">
                  <span class="name">Start Bootstrap</span>
                  <hr class="star-light">
                  <span class="skills">Web Developer - Graphic Artist - User Experience Designer</span>
              </div> -->
              <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                  <% @count.each do |a| %>

                  <% if a==0 %>
                  <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                  <%else%>
                  <li data-target="#carousel-example-generic" data-slide-to="<%=a%>"></li>
                  <%end%>

                  <% end %>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                  <% @professor.each do |p| %>
                  <%if p.id==1%>
                    <div class="item active">
                  <%else%>
                    <div class="item">
                  <%end%>
                      <a href="/professor/pro_detail/<%=p.id%>">
                        <img src="<%= p.img_url %>" alt class="img-responsive img-circle" width="60%">
                        <div class="carousel-caption">
                          <p><h1><%= p.name %></h1></p>
                        </div>
                      </a>
                    </div>
                  <% end %>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
          </div>
      </div>
    </div>
  </div>
</header>

<!-- Portfolio Grid Section -->
<section id="portfolio">
    <div class="contents">
        <div class="row">
            <div class="col-lg-12 text-center">
                <hr>
            </div>
        </div>
        <div class="row" style="color:black">
            <div class="col-sm-6 portfolio-item4">
                <h4>교수님</h4>
                <table class="qna_index_table" width="95%">
                  <%@professor.each do |p| %>
                  <tr height="30">
                    <td><kbd><%= p.id %></kbd></td>
                    <td width="78%" style="word-break:break-all"><a href="/professor/pro_detail/<%=p.id%>"><%=p.name %></a></td>
                    <td class="text-right"><%=link_to "바로가기", p.url, class: :small%></td>
                  </tr>
                  <% end %>
                </table>
            </div>
            <div class="score col-sm-6 portfolio-item3">
                <h4>학점 정보</h4>
                <div class="dropdown">
                  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    학과년도
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li><%=link_to "2009년", home_2009_path%></li>
                    <li><%=link_to "2010년", home_2010_path%></li>
                    <li><%=link_to "2011~2년", home_2012_path%></li>
                    <li><%=link_to "2013년", home_2013_path%></li>
                    <li><%=link_to "2014년", home_2014_path%></li>
                    <li><%=link_to "2015년", home_2015_path%></li>
                    <li><%=link_to "2016년", home_score_info_path%></li>
                  </ul>
                </div>
            </div>
            <div class="col-sm-6 portfolio-item2">
                <h4>이거 살래?</h4>
                <table class="qna_index_table" width="95%">
                  <% @store.each do |p| %>
                  <tr height="30">
                    <td><kbd><%= p.id %></kbd></td>
                    <td width="50%" style="word-break:break-all"><a href="/store/store_detail/<%=p.id%>">&nbsp;<%=p.state %>&nbsp;</a></td>
                    <td width="25%" style="word-break:break-all"><span style="color:darkorange"><%=p.cost%></span><small>원</small></td>
                    <td class="text-right"><small style="color:#737373"><%= time_ago_in_words(p.created_at) %> ago</small></td>
                  </tr>
                  <% end %>
                </table>
            </div>
            <div class="col-sm-6 portfolio-item1">
                <h4>QnA</h4>
                <table class="qna_index_table"  width="95%">
                  <% @qna.each do |p| %>
                  <tr height="30">
                    <td><kbd><%= p.id %></kbd></td>
                    <td width="75%" style="word-break:break-all"><a href="/qna/detail/<%=p.id%>">&nbsp;<%=p.content %>&nbsp;</a></td>
                    <td class="text-right"><small style="color:#737373"><%= time_ago_in_words(p.created_at) %> ago</small></td>
                  </tr>
                  <% end %>
                </table>
            </div>
        </div>
    </div>
</section>
